{
  "name": "echojs-mobile-client",
  "version": "0.0.6",
  "repository": "https://github.com/badsyntax/echojs-mobile-client",
  "config": {
    "build_dir": "./client/www",
    "dev_port": 8000
  },
  "scripts": {
    "env": "env",
    "prerelease": "npm test",
    "prestart": "npm install",
    "prewebpack": "npm run clean",
    "preemulate": "npm run build",
    "preemulate:release": "npm run build:release",
    "clean": "rm -rf $npm_package_config_build_dir ./client/plugins ./client/platforms/android/ant-build ./client/platforms/android/assets && mkdir $npm_package_config_build_dir client/platforms/android/assets",
    "start": "NODE_ENV=development BUILD_TYPE=web node dev-server",
    "webpack": "webpack --colors --progress --config ./webpack.config.js",
    "build": "NODE_ENV=development npm run webpack && npm run cordova:build",
    "build:release": "NODE_ENV=production BUILD_TYPE=cordova npm run webpack && npm run cordova:build:release",
    "cordova:platforms": "cd $npm_package_config_build_dir && cordova platform add android",
    "cordova:build": "cd $npm_package_config_build_dir && cordova build --debug android",
    "cordova:build:release": "cd $npm_package_config_build_dir && cordova build --release android",
    "emulate": "cd $npm_package_config_build_dir && cordova emulate android",
    "emulate:release": "npm run emulate",
    "lint": "eslint ./app",
    "test": "jest"
  },
  "dependencies": {
    "classnames": "^1.2.0",
    "flux": "^2.0.1",
    "lodash": "^3.6.0",
    "material-ui": "^0.7.3",
    "material-ui-sass": "^0.7.2",
    "moment": "^2.9.0",
    "react": "^0.13.1",
    "react-router": "^0.13.2",
    "whatwg-fetch": "^0.7.0"
  },
  "devDependencies": {
    "autoprefixer-core": "^5.1.8",
    "babel-core": "^5.0.8",
    "babel-eslint": "^2.0.2",
    "babel-jest": "^5.0.1",
    "babel-loader": "^5.0.0",
    "babel-runtime": "^5.0.8",
    "cordova": "^4.3.0",
    "css-loader": "^0.9.1",
    "eslint": "^0.18.0",
    "extract-text-webpack-plugin": "^0.5.0",
    "file-loader": "^0.8.1",
    "html-loader": "^0.2.3",
    "jest-cli": "^0.4.0",
    "json-loader": "^0.5.1",
    "opn": "^1.0.1",
    "postcss-loader": "^0.3.0",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.2.4",
    "sass-loader": "^0.4.2",
    "style-loader": "^0.9.0",
    "template-html-loader": "0.0.3",
    "url-loader": "^0.5.5",
    "webpack": "^1.7.3",
    "webpack-dev-server": "^1.8.0"
  },
  "jest": {
    "scriptPreprocessor": "./jest-preprocessor.js",
    "testPathDirs": [
      "./app"
    ],
    "testFileExtensions": [
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "globals": {
      "jest": true,
      "describe": true,
      "it": true,
      "expect": true
    },
    "rules": {
      "strict": true,
      "indent": [
        2,
        2
      ],
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
